<div class = "container">
  <div class = "row">
    <h1>User info</h1>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <%end%>
      <%end%>
      <div class = "form-group">
        <%= form_for(@user) do |f| %>
          <div class = "field">
            <label class = "edit-name">Name</label>
            <%= f.text_field :name %>
          </div>
          <div class = "field">
            <label class = "edit-image">Image</label>
            <%= f.attachment_field :profile_image, class:"user-edit-form" %>
          </div>
          <div class = "field">
            <label class = "edit-introduction">Introduction</label>
            <%= f.text_area :introduction %>
          </div>
          <div class = "action">
            <%= f.submit "Update User" %>
          </div>
        <%end%>
      </div>
  </div>
</div>